c-----------------------------------------------------------------------
      subroutine makeic(u0r,u0,v0,w0,ub,vb,wb,nb)

      include 'SIZE'
      include 'SOLN'

      parameter (lt=lx1*ly1*lz1*lelt)

      real u0r(nb)
      real u0(lt), v0(lt), w0(lt), ub(lt,nb), vb(lt,nb), wb(lt,nb)

      do i=1,nb
         u0r(i) = op_glsc2_wt(u0,v0,w0,ub(1,i),vb(1,i),wb(1,i),vmult)
     $          / op_glsc2_wt(ub(1,i),vb(1,i),wb(1,i),
     $                        ub(1,i),vb(1,i),wb(1,i),vmult)
         call h1norm(u0r(i),u0,v0,w0,ub(1,i),vb(1,i),wb(1,i),vmult)
         call h1norm(tmp,ub(1,i),vb(1,i),wb(1,i),
     $                   ub(1,i),vb(1,i),wb(1,i),vmult)
         u0r(i) = u0r(i) / tmp
c        if (nio.eq.0) write (6,*) i, u0r(i)
      enddo

      return
      end
c-----------------------------------------------------------------------
      subroutine testic(u0r,ub,vb,wb,nb)

      include 'SIZE'
      include 'SOLN'

      parameter (lt=lx1*ly1*lz1*lelt)

      real u0r(nb), ub(lt,nb), vb(lt,nb), wb(lt,nb)
      real u0(lt,3)

      n = lx1*ly1*lz1*nelv

      call opzero(u0,u0(1,2),u0(1,3))

      do i=1,nb
         call
     $   opadds(u0,u0(1,2),u0(1,3),ub(1,i),vb(1,i),wb(1,i),u0r(i),n,2)
         write (6,*) i,u0r(i)
      enddo

      call outpost(u0,u0(1,2),u0(1,3),pr,t,'ttt')

      return
      end
c-----------------------------------------------------------------------
      subroutine h1norm(h1nrm,u1x,u1y,u1z,u2x,u2y,u2z)

      include 'SIZE'

      parameter (lt=lx1*ly1*lz1*lelt)

      real u1x(lt), u1y(lt), u1z(lt)
      real u2x(lt), u2y(lt), u2z(lt), h1(lt), h2(lt)
      real uw(lt), vw(lt), ww(lt)

      n = lx1*ly1*lz1*nelv

      call rone(h1,n)
      call rzero(h2,n)

      call axhelm(uw,u1x,h1,h2,1,1)
      call axhelm(vw,u1y,h1,h2,1,1)
      if (ldim.eq.3) call axhelm(ww,u1z,h1,h2,1,1)

      h1nrm = glsc2(u2x,uw,n)+glsc2(u2y,vw,n)
      if (ldim.eq.3) h1nrm = h1nrm+glsc2(u2z,ww,n)

c     if (nio.eq.0) write(6,*) h1nrm,' h1norm'

      return
      end
