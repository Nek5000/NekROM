#!/bin/bash

cwd="$(pwd -P)"
base="$(cd .. ; dirname $(pwd -P))"

rm rom.f    &> /dev/null
rm pod.f    &> /dev/null
rm aux.f    &> /dev/null
rm read.f   &> /dev/null
rm dump.f   &> /dev/null
rm usr.f    &> /dev/null
rm unit.f   &> /dev/null
rm test.usr &> /dev/null
rm MOR      &> /dev/null

ln -s {${base}/code,${cwd}}/rom.f
ln -s {${base}/code,${cwd}}/pod.f
ln -s {${base}/code,${cwd}}/aux.f
ln -s {${base}/code,${cwd}}/read.f
ln -s {${base}/code,${cwd}}/dump.f

ln -s {${base}/tests,${cwd}}/usr.f
ln -s {${base}/tests,${cwd}}/unit.f
ln -s {${base}/tests,${cwd}}/test.usr

ln -s {${base}/code,${cwd}}/MOR
